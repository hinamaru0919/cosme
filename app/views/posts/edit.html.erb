<h1>編集画面</h1>
<% if @post.errors.any? %>
  <h3><%= @post.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <h4>画像</h4>
  <%= f.file_field :image %>

  <%= f.submit '保存' %>

<% end %>