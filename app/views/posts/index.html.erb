<div class="row">
<% @posts.each do |post| %>
  <div class="col-md-3">
    <div class="card">
    <% if post.image.attached? %>
      <%= image_tag post.image, class:"card-img-top" %>
    <% else %>
      <%= image_tag 'no_image', class:"card-img-top" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%=link_to post.title, post_path(post.id) %></h5>
      <p class="card-text"><%= post.body %></p>
      <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
    </div>
    </div>
  </div>
<% end %>
</div>